$('input#tr_id').val('')
$('input#tr_ev_id').val('')
$('input#tr_act_id').val('')
$('input#tr_op_id').val('')

<% if @trs.count.eql? 1 %>
	$('input#tr_id').val('<%= @trs.first.id %>')
	$('div#tr').html('<%=j render partial: 'fns/sm_tr', locals: {tr: @trs.first} %>')
<% elsif @trs.count.eql? 0 %>
	$('div#tr').html('Ничего не найдено')
<% else %>
	$('.event').val('<%= @spto %>')
	$('div#tr').html('Найдено <%= @trs.count %> записей, уточните')
<% end %>

